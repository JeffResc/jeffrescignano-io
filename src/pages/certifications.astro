---
import Layout from '../layouts/Layout.astro';
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";

// Fetch Credly badges
let badges = [];
let error = null;

try {
  const response = await fetch('https://www.credly.com/users/ee54aca2-7a7b-44ca-be1d-aa5a5a382c32/badges?page=1&page_size=48', {
    headers: {
      'Accept': 'application/json'
    }
  });

  if (response.ok) {
    const data = await response.json();
    badges = data.data || [];
  } else {
    error = `Failed to fetch badges: ${response.status}`;
  }
} catch (e) {
  error = `Error fetching badges: ${e.message}`;
}

// Sort badges by issued date (newest first)
badges.sort((a, b) => new Date(b.issued_at) - new Date(a.issued_at));
---

<Layout title="Certifications - Jeff Rescignano">
  <Header title="Certifications - Jeff Rescignano" />
  <div class="content">
    <Sidebar selectedItem="certifications" />
    <nav class="main">
      <div class="container">
        <div class="back-nav-container">
          <a href="/" class="back-nav-button w-inline-block">
            <img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
            <div>Back</div>
          </a>
        </div>
        <div class="content-container">
          <h1>Certifications</h1>
          <p>Here are my professional certifications and digital badges earned through various training programs and assessments.</p>

          {error && (
            <div class="error-message">
              <p>Unable to load certifications at this time. Please try again later.</p>
            </div>
          )}

          {!error && badges.length > 0 && (
            <section class="items-container">
              <div class="resouce-items">
                {badges.map((badge) => (
                  <div class="resource-single-item certification-item">
                    <div class="certification-image">
                      <img
                        src={badge.image_url}
                        alt={badge.badge_template.name}
                        loading="lazy"
                      />
                    </div>
                    <div class="single-resource-content">
                      <div class="single-resource-content-top">
                        <h3>{badge.badge_template.name}</h3>
                        <p class="issuer">Issued by {badge.issuer.entities[0].entity.name}</p>
                        <p class="description">{badge.badge_template.description}</p>
                        <div class="certification-meta">
                          <div class="mini-label-white gray-color">
                            Issued: {new Date(badge.issued_at).toLocaleDateString('en-US', {
                              year: 'numeric',
                              month: 'long',
                              day: 'numeric'
                            })}
                          </div>
                          {badge.expires_at && (
                            <div class="mini-label-white gray-color">
                              Expires: {new Date(badge.expires_at).toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric'
                              })}
                            </div>
                          )}
                          {badge.evidence && badge.evidence.length > 0 && (
                            <div class="mini-label-white gray-color">
                              ID: {badge.evidence[0].description}
                            </div>
                          )}
                        </div>
                        {badge.badge_template.skills && badge.badge_template.skills.length > 0 && (
                          <div class="chips-container">
                            {badge.badge_template.skills.slice(0, 5).map((skill) => (
                              <div class="single-chip">{skill.name}</div>
                            ))}
                          </div>
                        )}
                        <div class="certification-actions">
                          <a
                            href={`https://www.credly.com/badges/${badge.id}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="verify-button"
                          >
                            Verify
                            <i class="fa-solid fa-external-link" aria-hidden="true"></i>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </section>
          )}

          {!error && badges.length === 0 && (
            <p>No certifications found.</p>
          )}
        </div>
      </div>
    </nav>
  </div>

  <style>
    .certification-item {
      display: flex;
      gap: 1.5rem;
      align-items: flex-start;
    }

    .certification-image {
      flex-shrink: 0;
      width: 100px;
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 12px;
      padding: 0.75rem;
    }

    .certification-image img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }

    .issuer {
      color: #6366f1;
      font-weight: 500;
      margin: 0.5rem 0;
      font-size: 0.95rem;
    }

    .certification-meta {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
      margin: 1rem 0;
    }

    .error-message {
      background: rgba(220, 38, 38, 0.1);
      border: 1px solid rgba(220, 38, 38, 0.3);
      border-radius: 8px;
      padding: 1rem;
      margin: 1rem 0;
    }

    .error-message p {
      color: #fca5a5;
      margin: 0;
    }

    .certification-actions {
      margin-top: 1.5rem;
    }

    .verify-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: #6366f1;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 500;
      transition: background-color 0.2s ease;
    }

    .verify-button:hover {
      background: #5855eb;
      color: white;
    }

    .verify-button i {
      font-size: 0.75rem;
    }

    @media (max-width: 768px) {
      .certification-item {
        flex-direction: column;
        gap: 1rem;
      }

      .certification-image {
        width: 80px;
        height: 80px;
        align-self: center;
      }
    }
  </style>
</Layout>